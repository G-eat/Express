<% include include/header %>
  <% if (!success) { %>
    <div class="container">
      <h4>Please Log In or <a href="/">Register</a>.</h4>
    </div>
  <% } else { %>
    <br>
      <div class="container">
        <h5 class="center-align red-text">Create Post</h5>
        <form class="col s12" action="/" method="post" enctype="multipart/form-data">
          <div class="row">
            <div class="input-field">
              <input id="title" type="text" data-length="70" class="validate" name='title' required>
              <label for='title'>Title</label>
            </div>
          </div>
          <div class='row' >
            <div class="input-field">
              <textarea id="textarea1" name='body' class="materialize-textarea" required></textarea>
              <label for="textarea1">Body</label>
            </div>
          </div>
          <div class="row">
              <div class="file-field input-field">
              <div class="btn grey">
                <span>File</span>
                <input type="file" name='post_photo' required>
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
            <br>
            <button class="btn waves-effect waves-light" type="submit" name="button">Submit</button>
          </div>
        </form>
      </div>
    <% } %>
<% include include/footer %>
